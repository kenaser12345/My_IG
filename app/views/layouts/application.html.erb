<!DOCTYPE html>
<html>
  <head>
    <title>MyIg</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <nav class="navbar navbar-expand-lg navbar-light bg-white static-top">
      <div class="container">
        <a class="navbar-brand" href="<%= account_signed_in? ? dashboard_path : root_path %>">
          <i class="fab fa-instagram"></i> | IG
        </a>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="navbarResonsive" data-controls="navbarResonsive">
          <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarResonsive">
          <ul class="navbar-nav ml-auto">
            <%= render "shared/flash" %>
            <% if account_signed_in? %>
              <%= render "shared/account_nav" %>
            <% else %>
              <%= render "shared/public_nav" %>
            <% end %>
          </ul>
        </div>
      </div>
    </nav>
    <div class="container">
      <div class="row">
        <div class="col-lg-12">
          <%= yield %>
        </div>
      </div>
    </div>

  </body>
</html>
