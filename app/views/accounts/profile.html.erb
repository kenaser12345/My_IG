<div class="container">
    <div class="row">
      <div class="col-4">
        <%= profile_picture(@account, 200) %>
      </div>
      <div class="col-8 text-left profile-container">
        <h1><%= @account.username %></h1>
        <%= link_to "edit account", edit_account_registration_path, class: "btn btn-secondary" if can_edit_profile?(@account.id) %>
        <div class="profile-stats-group">
          <div class="profile-stats"><%= @account.posts.count %> posts</div>
          <div class="profile-stats"><%= @account.total_followers %> followers</div>
          <div class="profile-stats"><%= @account.total_following %> following</div>
        </div>
        <p><%= @account.full_name %></p>
        <p><%= @account.description %></p>
        <p><%= link_to @account.website if @account.website.present? %></p>
      </div>
      <div class="row">
        <div class="col-12">
          <% @posts.each do |post| %>
          <div class="col-3">
            <div class="insta-post">
              <%= image_tag post.image.url, class: "img img-fluid" %>
            </div>
          </div>
          <% end %>
        </div>
      </div>
    </div>
</div>