<div class="container">
    <div class="row">
      <div class="col-4 account_img">
        <%= profile_picture(@account, 200) %>
      </div>
      <div class="col-8 text-left profile-container">
        <div class="row"> 
          <div class="col-6" >
            <%= link_to "edit account", edit_account_registration_path, class: "btn btn-muted btn-custom float-right" if can_edit_profile?(@account.id) %>
            <h2><%= @account.full_name %></h2>
          </div>
        </div>
        <div class="profile-stats-group row">
          <div class="col-4">
            <div class="profile-stats"><%= @account.posts.count %> posts</div>
          </div>
          <div class="col-4">
            <div class="profile-stats"><%= @account.total_followers %> followers</div>
          </div>
          <div class="col-4">
            <div class="profile-stats"><%= @account.total_following %> following</div>
          </div>
        </div>
        <p><%= @account.full_name %></p>
        <p><%= simple_format @account.description %></p>
        <p><%= link_to @account.website if @account.website.present? %></p>
      </div>
      <div class="row profile-posts">

          <% @posts.each do |post| %>
          <div class="col-4">
            <div class="insta-post post-square" style="background: url(<%= post.image.url %>) no-repeat center top" >
              <div class="post-stats">
                <div class="inner">
                  <i class="fa fa-heart"></i><%= post.total_likes_count %>
                  <i class="fa fa-comment m-l-15"></i><%= post.total_comments_count %>
                </div>
              </div>
            </div>
          </div>
          <% end %>

      </div>
    </div>
</div>